{
  "manifest_version": 3,

  "name": "OWallet",
  "description": "OWallet: BTC x COSMOS x EVM x TRON x OASIS x SOLANA in one Wallet.",
  "version": "3.2.7",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "OWallet"
  },
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "identity",
    "idle",
    "alarms",
    "unlimitedStorage",
    "sidePanel",
    "activeTab",
    "https://*.sentry.io/", 
    "https://*.ingest.sentry.io/"
  ],
  "host_permissions": ["http://*/*", "https://*/*", "https://*.sentry.io/", "https://*.ingest.sentry.io/"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js", "contentScripts.bundle.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injectedScript.bundle.js"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/SpaceGrotesk-Bold.ttf"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/icon-128.png"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/megaphone.svg"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/locked-keplr-logo-128.png"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/icon-click-cursor.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
