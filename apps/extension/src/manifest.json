{
  "manifest_version": 3,
  "name": "OWallet",
  "description": "OWallet: BTC x COSMOS x EVM x TRON x OASIS in one Wallet",
  "version": "3.1.18",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "permissions": [
    "storage",
    "alarms",
    "identity",
    "idle",
    "notifications",
    "https://tx-history-backend.oraidex.io/*",
    "unlimitedStorage",
    "sidePanel",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js", "contentScripts.bundle.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injectedScript.bundle.js", "injectedScript.bundle.js.map", "assets/orai_wallet_logo.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "OWallet"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
